/* pages/cart/index.wxss */
.info {
  padding: 20rpx;
  width: 100%;
  display: flex;
  height: 150rpx;
  background-color: coral;
  justify-content: center;
}
.info .user_info {
  width: 100%;
  height: 100%;
  flex: 1;
  font-size: 28rpx;
  padding-top: 10rpx;
}
.info .user_info .username {
  font-weight: bold;
}
.info .user_tel {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 260rpx;
  font-size: 30rpx;
}
.cart_content {
  width: 100%;
}
.cart_content .cart_top {
  width: 100%;
  height: 80rpx;
  padding-left: 15rpx;
  font-size: 35rpx;
  color: red;
  line-height: 80rpx;
  border-bottom: 5rpx solid red;
}
.cart_content .main {
  width: 100%;
}
.cart_content .main .cart_item {
  height: 200rpx;
  display: flex;
  justify-content: center;
  border-bottom: 3rpx solid var(--themeColor);
}
.cart_content .main .cart_item .cart_img_wrap {
  height: 100%;
  display: flex;
  flex: 1;
  padding: 15rpx;
  justify-content: center;
  align-items: center;
}
.cart_content .main .cart_item .cart_img_wrap image {
  width: 80%;
}
.cart_content .main .cart_item .cart_info_wrap {
  flex: 2;
}
.cart_content .main .cart_item .cart_info_wrap .goods_name {
  padding-top: 25rpx;
  font-size: 32rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_content .main .cart_item .cart_info_wrap .goods_price_wrap {
  margin-top: 25rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart_content .main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  flex: 1;
  color: red;
  font-size: 34rpx;
}
.cart_content .main .cart_item .cart_info_wrap .goods_price_wrap .cart_num_tool {
  flex: 2;
  text-align: center;
  font-size: 35rpx;
}
.result {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  border-top: 2rpx solid #aaa;
  display: flex;
  justify-content: center;
}
.result .center {
  flex: 2.5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-right: 40rpx;
}
.result .center .top {
  font-size: 35rpx;
}
.result .center .under {
  font-size: 30rpx;
  color: red;
}
.result .btn {
  flex: 1;
  background-color: red;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 35rpx;
  text-align: center;
}
