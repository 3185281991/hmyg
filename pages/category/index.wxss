/* pages/category/index.wxss */
page {
  height: 100%;
}
.cate {
  height: 100%;
}
.cate .con {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cate .con .left {
  flex: 2;
}
.cate .con .left .left-item {
  text-align: center;
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.cate .con .left .active {
  background-color: coral;
  color: #fff;
}
.cate .con .right {
  flex: 5;
}
.cate .con .right .goods_group .goods_title {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
}
.cate .con .right .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cate .con .right .goods_group .goods_list navigator {
  margin-top: 5rpx;
  width: 33.33%;
  height: 180rpx;
  text-align: center;
}
.cate .con .right .goods_group .goods_list navigator image {
  width: 100%;
  max-height: 80%;
}
.cate .con .right .goods_group .goods_list navigator .goods_name {
  width: 100%;
  height: 20%;
  font-size: 24rpx;
}
